doctype html
html(lang='en', ng-app='phonecatApp')
  head
    meta(charset='utf-8')
    title My HTML File
    link(rel='stylesheet',
      href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css',
      integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T',
      crossorigin='anonymous')
    script(src='/javascripts/vendor/angular.js')
    script(src='/javascripts/vendor/angular-route.js')
    script(src='/javascripts/app.module.js')
    script(src='/javascripts/app.config.js')
    script(src='/javascripts/core/core.module.js')
    script(src='/javascripts/core/checkmark/checkmark.filter.js')
    script(src='/javascripts/phone-list/phone-list.module.js')
    script(src='/javascripts/phone-list/phone-list.component.js')
    script(src='/javascripts/phone-detail/phone-detail.module.js')
    script(src='/javascripts/phone-detail/phone-detail.component.js')
  body
    div(ng-view)
    table.table
      tr
        th(colspan='8') Row Number
      tr(ng-repeat='i in [1, 2, 3, 4, 5, 6, 7, 8]')
        td(ng-repeat='j in [1, 2, 3, 4, 5, 6, 7, 8]') {{ i }}, {{ j }}
    p
      span {{ 'lower cap string' | uppercase }}
    p
      span {{{ foo: bar, baz: 42 } | json }}
    p
      span {{ 1459461289000 | date }}
    p
      span {{ 1459461289000 | date:'MM/dd/yyyy @ h:mma' }}
    p
      input(ng-model="userInput")
      span Uppercased: {{ userInput | uppercase }}
